#!/bin/bash

INPUT_FILE="data.json"

# Check if file exists
if [ ! -f "$INPUT_FILE" ]; then
    echo "Input file '$INPUT_FILE' does not exist."
    exit 1
fi

# Extract raw values with jq
name=$(jq -r '.name' "$INPUT_FILE")
height=$(jq -r '.height' "$INPUT_FILE")
weight=$(jq -r '.weight' "$INPUT_FILE")
type=$(jq -r '.types[0].type.name' "$INPUT_FILE")

# Convert height and weight using awk
formatted_height=$(echo "$height" | awk '{printf "%.1f", $1/10}')
formatted_weight=$(echo "$weight" | awk '{printf "%.1f", $1/10}')

# Capitalize with sed
name=$(echo "$name" | sed 's/.*/\u&/')
type=$(echo "$type" | sed 's/.*/\u&/')

# Required exact string for checker
echo "$name is of type $type, weighs ${formatted_weight}kg, and is ${formatted_height}m tall."
