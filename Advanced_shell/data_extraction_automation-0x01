#!/bin/bash

INPUT_FILE="data.json"

# Check if file exists
if [ ! -f "$INPUT_FILE" ]; then
    echo "Input file '$INPUT_FILE' does not exist."
    exit 1
fi

# Extract values using awk and sed
name=$(grep -o '"name": *"[^"]*"' "$INPUT_FILE" | head -n 1 | sed 's/"name": *"\([^"]*\)"/\1/')
height=$(grep -o '"height": *[0-9]*' "$INPUT_FILE" | sed 's/"height": *//')
weight=$(grep -o '"weight": *[0-9]*' "$INPUT_FILE" | sed 's/"weight": *//')
type=$(grep -o '"type": *{ *"name": *"[^"]*"' "$INPUT_FILE" | head -n 1 | sed 's/.*"name": *"\([^"]*\)".*/\1/')

# Convert to meters and kilograms using awk
formatted_height=$(echo "$height" | awk '{printf "%.1f", $1/10}')
formatted_weight=$(echo "$weight" | awk '{printf "%.1f", $1/10}')

# Output
echo "${name^} is of type ${type^}, weighs ${formatted_weight}kg, and is ${formatted_height}m tall."
