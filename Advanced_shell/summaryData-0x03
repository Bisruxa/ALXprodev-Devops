#!/bin/bash

OUTPUT_CSV="pokemon_report.csv"

# CSV header
echo "Name,Height(m),Weight(kg)" > "$OUTPUT_CSV"

# Loop through all .json files
for file in *.json; do
    # Extract fields using jq
    name=$(jq -r '.name' "$file")
    height=$(jq -r '.height' "$file")
    weight=$(jq -r '.weight' "$file")

    # Convert height (dm→m) and weight (hg→kg) using awk
    height_m=$(echo "$height" | awk '{printf "%.1f", $1/10}')
    weight_kg=$(echo "$weight" | awk '{printf "%.1f", $1/10}')

    # Capitalize name using sed
    name=$(echo "$name" | sed 's/.*/\u&/')

    # Append to CSV
    echo "$name,$height_m,$weight_kg" >> "$OUTPUT_CSV"
done

# Calculate averages with awk
awk -F, 'NR>1 {sum_h+=$2; sum_w+=$3; count++}
END {printf "Average,%.1f,%.1f\n", sum_h/count, sum_w/count}' "$OUTPUT_CSV" >> "$OUTPUT_CSV"

echo "✅ Report generated in $OUTPUT_CSV"
